    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/Mostafa_model_training/main",
            "MIMode": "lldb"
        },
        {
            "name": "Debug C++ (main.cpp)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Mostafa_model_training/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Mostafa_model_training",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build-cpp"
        },
        {
            "name": "Run C++ (main.cpp)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Mostafa_model_training/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Mostafa_model_training",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "build-cpp"
        },
        {
            "name": "Debug Python (main.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/tf-venv/bin/python"
        },
        {
            "name": "Debug Python Vision System",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/computer_vision/conveyor_vision_system.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/tf-venv/bin/python"
        },
        {
            "name": "Debug Python Chatbot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ai_chatbot/factory_ai_assistant.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/tf-venv/bin/python"
        },
        {
            "name": "Debug FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.fastapi_server:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8001",
                "--reload"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/tf-venv/bin/python"
        }
    ]
}