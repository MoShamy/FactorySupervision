{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build-cpp",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-std=c++17",
                "-o",
                "${workspaceFolder}/Mostafa_model_training/main",
                "${workspaceFolder}/Mostafa_model_training/main.cpp"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build C++ main.cpp file for debugging"
        },
        {
            "label": "clean-cpp",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "${workspaceFolder}/Mostafa_model_training/main"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Clean C++ build artifacts"
        },
        {
            "label": "run-python-main",
            "type": "shell",
            "command": "${workspaceFolder}/tf-venv/bin/python",
            "args": ["${workspaceFolder}/main.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Run Python main.py"
        },
        {
            "label": "start-backend",
            "type": "shell",
            "command": "${workspaceFolder}/tf-venv/bin/python",
            "args": [
                "-m",
                "uvicorn",
                "backend.fastapi_server:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8001",
                "--reload"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Start FastAPI backend server",
            "isBackground": true
        },
        {
            "label": "start-frontend",
            "type": "shell",
            "command": "node",
            "args": ["frontend/dashboard_server.js"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Start Node.js frontend server",
            "isBackground": true
        }
    ],
    "version": "2.0.0"
}